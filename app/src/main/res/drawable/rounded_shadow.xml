<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bóng đổ -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>  <!-- Bo góc -->
            <solid android:color="#40000000"/> <!-- Màu đen mờ cho bóng -->
        </shape>
    </item>

    <!-- Hình vuông màu trắng -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>  <!-- Bo góc -->
            <solid android:color="@android:color/white"/> <!-- Màu trắng -->
        </shape>
    </item>

</layer-list>
