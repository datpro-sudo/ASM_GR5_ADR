<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer bóng đổ (màu xám, offset để tạo hiệu ứng đổ bóng) -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#40000000" /> <!-- Màu xám trong suốt cho bóng -->
        </shape>
    </item>

    <!-- Layer chính (hình vuông bo góc, màu trắng) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" /> <!-- Màu nền trắng -->
        </shape>
    </item>
</layer-list>